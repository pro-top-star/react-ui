{
  "packages": [
    "packages/*"
  ],
  "version": "0.5.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "yes": true,
      "preid": "rc",
      "message": "chore(release): publish %s [ci skip]",
      "forcePublish": true
    }
  }
}
