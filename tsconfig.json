{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@lib/*": ["packages/fiori3/src/lib/*"],
      "@fiori-for-react/fiori3/*": ["packages/fiori3/src/*"],
      "@fiori-for-react/fiori3": ["packages/fiori3/src/index.ts"],
      "@fiori-for-react/styles": ["packages/styles/src/index.ts"],
      "@fiori-for-react/utils": ["packages/utils/src/index.ts"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/**/*",
    "shared/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
